<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<window
    id="main"
    title="Dentro"
    width="300"
    height="300"
    onload="init();"
    onclose="closeDentro();"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">

  <script type="application/javascript" src="chrome://dentro/content/main.js"/>
  <script src="chrome://venkman/content/venkman-overlay.js" />
  <toolbox>
    <menubar>
      <menu id="file" label="File">
        <menupopup>
          <menuitem label="New" oncommand="newOPMLfile()" />
          <menuitem label="Open" oncommand="loadOPMLfile()"/>
          <menuitem label="Save" oncommand="saveOPMLfile()"/>
          <menuitem label="Save As" oncommand="saveOPMLfileAs()"/>
          <menuitem label="Quit" oncommand="closeDentro()" />
        </menupopup>
      </menu>
      <menu id="edit" label="Edit">
        <menupopup>
          <menuitem label="Undo" oncommand="" />
          <menuitem label="Redo" oncommand="" />
        </menupopup>
      </menu>
      <menu id="outline" label="Outline">
        <menupopup>
          <menuitem label="Expand All Nodes" oncommand="expandAll()" />
          <menuitem label="Collapse All Nodes" oncommand="collapseAll()" />
        </menupopup>
      </menu>
      <menu id="help" label="Help">
        <menupopup>
          <menuitem label="About" oncommand="" />
          <menuitem label="Debug" oncommand="start_venkman()" />
        </menupopup>
      </menu>
    </menubar>
  </toolbox>
  <iframe type="chrome" id="mainWindow" flex="1" />
</window>
